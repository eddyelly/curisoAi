{
    "identifier": "com.curiso.ai",
    "productName": "Curiso AI",
    "version": "1.1.0",
    "build": {
      "beforeBuildCommand": "npm run build",
      "beforeDevCommand": "npm run dev",
      "devUrl": "http://localhost:5173",
        "frontendDist": "../dist"
    },
    "app": {
      "withGlobalTauri": true,
      "security": {
       "csp": "default-src 'self' 'unsafe-inline' 'wasm-unsafe-eval' http://localhost:* https://*; script-src 'self' 'unsafe-inline' 'wasm-unsafe-eval'; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; connect-src 'self' http://127.0.0.1:* http://localhost:* https://* http://*",
       "capabilities": [
        {
          "identifier": "fetch",
          "windows": ["main"],
          "permissions": [
              "http:default",
              {
                "identifier": "http:default",
                "allow": [
                  {
                    "url": "http://**"
                  },
                  {
                    "url": "https://**"
                  },
                  {
                    "url": "http://*:*"
                  },
                  {
                    "url": "https://*:*"
                  }
                ]
              }
            ],
          "scope": {
            "url": ["*", "http://*", "https://*", "http://*/*", "https://*/*", "https://mythrel.com/*"]
          }
        }
      ]
      },
      "windows": [
        {
          "fullscreen": false,
          "height": 800,
          "resizable": true,
          "title": "Curiso AI",
          "width": 1200
        }
      ]
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "resources": ["../client/src/assets/*"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "targets": ["app", "deb", "dmg", "msi"]
    }    
  }